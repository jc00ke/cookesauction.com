.block
  .secondary-navigation
    %ul.wat-cf
      %li.first=link_to pat(:list), url(:emails, :index)
      %li=link_to pat(:new), url(:emails, :new)
      %li.active=link_to pat(:edit), url(:emails, :edit, :id => @email.id)
  .content
    %h2.title
      =pat(:edit)
      =mt(:email)
    .inner
      -form_for :email, url(:emails, :update, :id => @email.id), :method => :put, :class => :form do |f|
        =partial "emails/form", :locals => { :f => f }

-content_for :sidebar, partial("base/sidebar")