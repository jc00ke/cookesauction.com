!!! Strict
%html{ :xmlns => "http://www.w3.org/1999/xhtml" }
  %head
    %meta{ :content => "text/html; charset=utf-8", "http-equiv" => "content-type" }
    %title
      = @title
      \:: Cooke's Auction Service, Inc.
    
    %link{ :rel => "stylesheet", :type => "text/css", :media => "screen", :href => "http://ajax.googleapis.com/ajax/libs/yui/2.7.0/build/reset-fonts-grids/reset-fonts-grids.css", :charset => "utf-8" }
    %link{ :rel => "stylesheet", :type => "text/css", :media => "screen", :href => "http://ajax.googleapis.com/ajax/libs/yui/2.7.0/build/base/base-min.css", :charset => "utf-8" }
    %link{ :rel => "stylesheet", :type => "text/css", :media => "screen", :href => "/master.css", :charset => "utf-8" }
  %body{ :id => @body_id }
    #custom-doc
      #header
        %h1
          Cooke&rsquo;s Auction Service, Inc.
        %h2
          It doesn&rsquo;t
          %em
            cost
          to hire a good auctioneer; It
          %strong
            pays!
        %ul#nav
          %li
            %a{ :href => "/" }
              Home
          %li
            %a{ :href => "/hire-us" }
              Hire us
          %li
            %a{ :href => "/testimonials" }
              Testimonials
          %li
            %a{ :href => "/past-sales" }
              Past sales
          %li
            %a{ :href => "/contact-us" }
              Contact us
      #email_signup
        %a{ :href => "/signup", :title => 'Email List' }
          Signup for our email list
      #content
        - if flash[:error]
          .error
            = flash[:error]
        - if flash[:notice]
          .notice
            = flash[:notice]
        = yield
      #footer
        .right
          %a{ :href => "/unsubscribe" }
            Unsubscribe from mailing list
          %a{ :href => "/privacy" }
            Privacy 
          %a{ :href => "http://jc00ke.com" }
            By an n-tier engineer
        \&reg; Cooke's Auction Service, Inc. &ndash;
        = Time.now.strftime('%Y')
      
      #dialog
        
    %script{ :type => "text/javascript", :src  => "http://ajax.googleapis.com/ajax/libs/jquery/1.3.2/jquery.min.js" }
    %script{ :type => "text/javascript", :src  => "/javascripts/application.js" }
