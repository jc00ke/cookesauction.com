%form{ :action => "#{@action}", :method => 'post' }
  %fieldset
    %legend
      Create/Edit a Sale Listing
    %label
      Page Title
    %input{ :type => 'text', :name => 'page_title' }
    %br/
    %label
      Visible
    %input{ :type => 'checkbox', :name => 'page_visible', :checked => @page_visible }
    %br/
    %label
      Keywords
    %textarea{ :name => 'page_keywords' }= @page_keywords
    %br/
    %label
      Description
    %textarea{ :name => 'page_description' }= @page_description
    %br/
    %label
      Content
    %textarea{ :name => 'page_content' }= @page_content
    %br/
    %label
      Sale Title
    %input{ :type => 'text', :name => 'sale_title', :value => @sale_title }
    %br/
    %label
      Starting At
    %input{ :type => 'text', :name => 'starting_at', :value => @starting_at }
    %br/
    %label
      Street Address
    %input{ :type => 'text', :name => 'street_address', :value => @street_address }
    %br/
    %label
      City
    %input{ :type => 'text', :name => 'city', :value => @city }
    %br/
    %label
      State
    %input{ :type => 'text', :name => 'state', :value => @state }
    %br/
    %label
      Zip
    %input{ :type => 'text', :name => 'zip', :value => @zip }
    %br/
    %label
      Number Photos
    %input{ :type => 'text', :name => 'number_photos', :value => @number_photos }
    %br/
    %label
      Sale Type
    %input{ :type => 'text', :name => 'sale_type', :value => @sale_type }
    %br/
    %label
      Update
    %textarea{ :name => 'update_text' }
    %br
    %input{ :type => 'submit', :value => 'Submit' }
    %a{ :href => '/admin' }
      Cancel
