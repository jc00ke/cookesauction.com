!!!
%html
  %head
    %meta{ :content => "text/html; charset=utf-8", "http-equiv" => "content-type" }
    %title= "#{@title} :: Cooke's Auction Service"

    %link{ :rel => "stylesheet", :type => "text/css", :media => "screen", :href => "http://ajax.googleapis.com/ajax/libs/yui/2.7.0/build/reset-fonts-grids/reset-fonts-grids.css", :charset => "utf-8" }
    %link{ :rel => "stylesheet", :type => "text/css", :media => "screen", :href => "http://ajax.googleapis.com/ajax/libs/yui/2.7.0/build/base/base-min.css", :charset => "utf-8" }
    %link{ :rel => "stylesheet", :type => "text/css", :media => "screen", :href => "/master.css", :charset => "utf-8" }
    %link{ :rel => "stylesheet", :type => "text/css", :media => "screen", :href => "/fancybox/jquery.fancybox-1.3.4.css", :charset => "utf-8" }
    :javascript
      var _gaq = _gaq || [];
      _gaq.push(['_setAccount', 'UA-22377283-1']);
      _gaq.push(['_trackPageview']);

      (function() {
        var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
        ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
        var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
      })();
  %body{ :id => @body_id }
    #custom-doc
      #header
        %h1
          Cooke&rsquo;s Auction Service, Inc.
        %h2
          It doesn&rsquo;t
          %em cost
          to hire a good auctioneer; It
          %strong pays!
        %ul#nav
          %li
            %a{ :href => "/" } Home
          %li
            %a{ :href => "/testimonials" } Testimonials
          %li
            %a{ :href => "/past-sales" } Past sales
          %li
            %a{ :href => "/contact-us" } Contact us
          - if @is_admin
            %li
              %a{ :href => "/admin" } Admin
      #email_signup
        %a{ :href => "/signup", :title => 'Email List' } Signup for our email list
      #content
        = styled_flash
        = yield
      #footer
        .right
          %a{ :href => "/unsubscribe" } Unsubscribe from mailing list
          %a{ :href => "/privacy" } Privacy
          %a{ :href => "http://jc00ke.com" } By an n-tier engineer
        \&reg; Cooke's Auction Service, Inc. &ndash;
        = Time.now.year

    %script{ :type => "text/javascript", :src  => "http://ajax.googleapis.com/ajax/libs/jquery/1.4.4/jquery.min.js" }
    %script{ :type => "text/javascript", :src  => "//ajax.googleapis.com/ajax/libs/jqueryui/1.9.1/jquery-ui.min.js" }
    %script{ :type => "text/javascript", :src  => "/fancybox/jquery.mousewheel-3.0.4.pack.js" }
    %script{ :type => "text/javascript", :src  => "/fancybox/jquery.fancybox-1.3.4.pack.js" }
    %script{ :type => "text/javascript", :src  => "/javascripts/jquery.lazyload.js" }
    %script{ :type => "text/javascript", :src  => "/javascripts/application.js" }
